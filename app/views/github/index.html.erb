
<div>

  <form class="form-horizontal" action="/github" accept-charset="UTF-8" method="get">

    <div class="form-group">
      <div class="col-sm-12" style="text-align:right">
        <input type="submit" value="Buscar" class="btn btn-primary" data-disable-with="Pesquisar">
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-1 control-label" for="banco_nome">Repositórios</label>
      <div class="col-sm-11">
        <input class="form-control" type="text" name="nome" id="banco_nome" value="<%= params[:nome] %>">
      </div>
    </div>

  </form>

</div>

<div class="page-header">
  <h1>Listagem de Repositórios</h1>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Projecto</th>
        <th>Linguagem</th>
        <th>Descrição</th>
        <th colspan="1" class="text-center">Acções</th>
      </tr>
    </thead>

    <tbody>
      <%= @my_repo.each do |repo| %>
        <tr>
            <td><%= repo[0] %></td>
            <td>
                <%= repo[1].each do |languange| %>
                    <%= languange %>,
                <% end %>
            </td>
            <td><%= repo[2] %></td>
            <td>
                <a target="_blank" href="https://api.github.com/users/<%= repo[0]%>/repos" class="btn btn-primary my-2">Ver</a>
            </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
