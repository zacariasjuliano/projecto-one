<section class="py-5 container">
    <div class="row py-lg-5">
        <div class="col-lg-12 text-center" style="display: inline-block; float: none;">
            <h1 class="fw-light">CONTACTO</h1>
            <p class="lead text-muted">Informações do contacto.</p>
        </div>

        <div> 
            <div class="form-group">
                <label for="nome">Nome: </label>
                <label for="nome"> <%= @contacto.nome %> </label>
            </div>

            <div class="form-group">
                <label for="email">E-mail: </label>
                <label for="email"> <%= @contacto.email %> </label>
            </div>

            <div class="form-group">
                <label for="observacao">Observação:</label>
                <label for="observacao"> <%= @contacto.observacao %> </label>
            </div>
        </div>
    </div>

</section>